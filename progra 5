import math

# Funcion para calcular el area de un circulo
def calcular_area_circulo(radio):
    # Calcula el area usando la formula: area = pi * radio^2
    area = math.pi * (radio ** 2)
    return area

# Funcion para calcular el volumen de un cilindro
def calcular_volumen_cilindro(radio, altura):
    # Calcula el area de la base del cilindro
    area_base = calcular_area_circulo(radio)
    # Calcula el volumen usando la formula: volumen = area_base * altura
    volumen = area_base * altura
    return volumen

# Funcion principal que controla el flujo del programa
def main():
    # Pide al usuario que ingrese el radio del circulo
    radio = float(input("Ingresa el radio del circulo: "))
    
    # Calcula el area del circulo
    area = calcular_area_circulo(radio)
    print(f"El area del circulo es: {area:.2f}")

    # Pide al usuario que ingrese la altura del cilindro
    altura = float(input("Ingresa la altura del cilindro: "))
    
    # Calcula el volumen del cilindro
    volumen = calcular_volumen_cilindro(radio, altura)
    print(f"El volumen del cilindro es: {volumen:.2f}")

# Llamada a la funcion principal
main()
