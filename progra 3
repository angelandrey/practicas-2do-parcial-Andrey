# Funcion para calcular el factorial de un numero
def factorial(n):
    # Inicializa el resultado como 1
    resultado = 1
    
    # Calcula el factorial multiplicando los numeros desde 1 hasta n
    for i in range(1, n + 1):
        resultado *= i
    
    # Retorna el resultado
    return resultado

# Funcion principal que controla el flujo del programa
def main():
    # Pide al usuario que ingrese un entero positivo
    numero = int(input("Ingresa un entero positivo: "))
    
    # Verifica si el numero es positivo
    if numero < 0:
        print("Por favor, ingresa un numero positivo.")
    else:
        # Llama a la funcion factorial y muestra el resultado
        resultado = factorial(numero)
        print(f"El factorial de {numero} es {resultado}.")

# Llamada a la funcion principal
main()
